<h1>All Loot</h1>

<%= will_paginate %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Stackable</th>
      <th>Experimental</th>
      <th>External link</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @loots.each do |loot| %>
      <tr>
        <td><%= loot.name %></td>
        <td><%= loot.loot_type %></td>
        <td><%= loot.stackable %></td>
        <td><%= loot.experimental %></td>
        <td><%= loot.external_link %></td>
        <td><%= link_to 'Show', loot %></td>
        <td><%= link_to 'Edit', edit_loot_path(loot) %></td>
        <td><%= link_to 'Destroy', loot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>

<br>
<%= link_to 'New Loot', new_loot_path, class: 'btn btn-default' %>

<br>
<br>

<h2>Export Loot</h2>
<%= link_to "CSV", loots_path(format: "csv"), class: 'btn btn-default' %>&nbsp;
<%= link_to "Excel", loots_path(format: "xls"), class: 'btn btn-default' %>

<br>
<br>

<h2>Import Loot</h2>
<%= form_tag import_loots_path, multipart: true do %>
  <%= file_field_tag :file %>&nbsp;
  <%= submit_tag "Import", class: 'btn btn-default' %>
<% end %>

